(defwindow left-screen-mask-power-off
  :monitor 0
  :geometry (geometry
    :width "100%"
    :height "104%"
    :anchor "center center")
  :stacking "fg"
  :orientation "v"
  :valign "center"
    (eventbox
      :onclick "$HOME/.config/eww/scripts/power-cancel.sh 'off'"
        (box :class "side-screen-mask")
    )
)